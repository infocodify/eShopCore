@model Product

<!DOCTYPE html>

<h2>@Model.Name</h2>

<div class="img-thumbnail">

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img alt="@Model.Name" src="@Model.ImageUrl" class="img-fluid"/>
            </div>

            <div class="col-md-6">
                <div class="figure-caption">
                    <h3 class="float-md-right">@Model.Price</h3>
                    <h3>
                        <a href="#">@Model.Name</a>
                    </h3>
                    <h4>@Model.ShortDescription</h4>
                    <p>@Model.LongDescription</p>
                </div>

            </div>

        </div>
    </div>
</div>
